<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigBox">
        <!--item name="android:background">@android:color/holo_green_light</item-->
        <!--item name="android:textAlignment">center</item-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_mono</item>

        <item name="android:layout_marginTop">@dimen/margin_wide</item>
        <item name="android:layout_marginStart">@dimen/margin_wide</item>
        <item name="android:layout_marginEnd">@dimen/margin_wide</item>
        <!--item name="android:layout_marginBottom">@dimen/margin_wide</item-->

    </style>

    <style name="LilBox" parent="BigBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>

        <!--
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginStart">@dimen/margin_narrow</item>
        <item name="android:layout_marginEnd">@dimen/margin_wide</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        -->
    </style>

    <style name="InfoBox" parent="LilBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <!--
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginStart">@dimen/margin_narrow</item>
        <item name="android:layout_marginEnd">@dimen/margin_wide</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        -->
    </style>

</resources>
